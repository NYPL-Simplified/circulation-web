{
  "name": "simplified-circulation-web",
  "version": "0.5.16",
  "description": "Web Front-end for Library Simplified Circulation Manager Admin Interface",
  "repository": {
    "type": "git",
    "url": "https://github.com/NYPL-Simplified/circulation-web.git"
  },
  "main": "index.tsx",
  "author": "NYPL",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "scripts": {
    "lint": "tslint -c tslint.json src/*.ts src/*.tsx src/**/*.ts src/**/*.tsx src/**/**/*.ts src/**/**/*.tsx && sass-lint -c .sass-lint.yml -v -q",
    "test": "npm run lint && tsc && cp -r src/stylesheets lib && mocha --require ts-node/register --require src/testHelper.ts src/__tests__/*.ts src/**/__tests__/*.ts src/**/**/__tests__/*.ts",
    "test-jest": "jest",
    "test-list": "mocha --require ts-node/register --require src/testHelper.ts src/__tests__/*.ts src/**/__tests__/*.ts src/**/**/__tests__/*.ts --reporter ./testReporter.ts",
    "test-file": "npm run lint && cp -r src/stylesheets lib && mocha --require src/testHelper.ts",
    "test-browser": "npm run test-chrome && npm run test-firefox",
    "test-chrome": "node_modules/.bin/selenium-standalone install && nightwatch -e chrome",
    "test-firefox": "node_modules/.bin/selenium-standalone install && nightwatch -e firefox",
    "dev": "webpack serve --config webpack.dev.config",
    "dev-test-axe": "TEST_AXE=true npm run dev",
    "prod": "webpack --config webpack.prod.config",
    "build-docs": "typedoc --tsconfig tsconfig.json"
  },
  "dependencies": {
    "@nypl/dgx-svg-icons": "0.3.4",
    "bootstrap": "^5.2.0",
    "draft-convert": "^2.1.5",
    "draft-js": "0.11.7",
    "font-awesome": "^4.6.3",
    "isomorphic-fetch": "^3.0.0",
    "library-simplified-reusable-components": "1.3.18",
    "numeral": "^2.0.6",
    "opds-feed-parser": "0.0.17",
    "opds-web-client": "0.6.3",
    "prop-types": "^15.8.1",
    "qs": "^6.2.0",
    "react": "^16.8.6",
    "react-beautiful-dnd": "^11.0.2",
    "react-bootstrap": "^2.1.1",
    "react-color": "^2.14.1",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router": "^3.2.0",
    "recharts": "^1.0.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "request": "^2.85.0",
    "stream-browserify": "^3.0.0",
    "timers-browserify": "^2.0.12",
    "ts-node": "^10.4.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^28.1.8",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.3.0",
    "@types/prop-types": "^15.7.4",
    "@types/react": "^16.14.6",
    "@types/react-dom": "^16.8.5",
    "@types/react-redux": "^7.1.16",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-jest": "^27.4.6",
    "babel-loader": "^8.2.3",
    "chai": "4.2.0",
    "clean-webpack-plugin": "^4.0.0",
    "colors-cli": "^1.0.27",
    "css-loader": "^6.5.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "fetch-mock": "^7.3.1",
    "file-loader": "^6.2.0",
    "follow-redirects": "^1.7.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^4.3.0",
    "jest": "^27.4.7",
    "jsdom": "^19.0.0",
    "lint-staged": "^10.4.0",
    "mini-css-extract-plugin": "2.5.3",
    "mocha": "^6.2.2",
    "nightwatch": "^1.0.19",
    "node-sass": "^7.0.1",
    "prettier": "2.1.2",
    "react-axe": "^3.3.0",
    "sass-lint": "^1.13.1",
    "sass-loader": "^12.4.0",
    "selenium-standalone": "^6.16.0",
    "sinon": "7.5.0",
    "terser-webpack-plugin": "^5.3.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tslint": "^5.20.1",
    "tslint-react-a11y": "1.1.0",
    "typedoc": "0.15.2",
    "typescript": "4.5.5",
    "url-loader": "4.1.1",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3",
    "webpack-merge": "^5.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write",
    "*.{js,css,md}": "prettier --write"
  }
}
