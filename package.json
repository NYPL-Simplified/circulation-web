{
  "name": "simplified-circulation-web",
  "version": "0.0.10",
  "description": "Web Front-end for Library Simplified Circulation Manager",
  "repository": {
    "type": "git",
    "url": "https://github.com/NYPL-Simplified/circulation-web.git"
  },
  "main": "dist/circulation-web.js",
  "author": "NYPL",
  "license": "Apache-2.0",
  "scripts": {
    "prepublish": "typings install && npm run prod",
    "test": "tslint -c tslint.json src/*.ts src/*.tsx src/**/*.ts src/**/*.tsx src/**/**/*.ts src/**/**/*.tsx && tsc && jest",
    "test-browser": "npm run test-chrome && npm run test-firefox",
    "test-chrome": "node_modules/.bin/selenium-standalone install && nightwatch -e chrome",
    "test-firefox": "node_modules/.bin/selenium-standalone install && nightwatch -e firefox",
    "dev": "rm -rf dist && NODE_ENV=development webpack --watch --progress --display-modules --config webpack.prod.config",
    "prod": "rm -rf dist && NODE_ENV=production webpack -p --progress --display-modules --config webpack.prod.config"
  },
  "dependencies": {
    "bootstrap": "^3.3.6",
    "font-awesome": "^4.6.3",
    "isomorphic-fetch": "^2.2.1",
    "opds-feed-parser": "0.0.12",
    "opds-web-client": "^0.0.22",
    "qs": "^6.2.0",
    "react": "^15.3.0",
    "react-bootstrap": "0.29.4",
    "react-dom": "^15.3.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.1",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "request": "^2.72.0"
  },
  "devDependencies": {
    "css-loader": "^0.23.1",
    "enzyme": "^2.3.0",
    "file-loader": "^0.8.5",
    "jest": "^0.1.40",
    "jest-cli": "^0.8.2",
    "json-loader": "^0.5.4",
    "nightwatch": "^0.9.3",
    "react-addons-test-utils": "^15.3.0",
    "selenium-standalone": "5.1.0",
    "style-loader": "^0.13.1",
    "ts-loader": "^0.8.2",
    "tslint": "^3.10.2",
    "typescript": "^1.8.10",
    "typings": "^1.0.4",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1"
  },
  "jest": {
    "rootDir": "./lib",
    "testRunner": "../node_modules/jest-cli/src/testRunners/jasmine/jasmine2.js",
    "testFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "unmockedModulePathPatterns": [
      "../node_modules/*"
    ],
    "globals": {
      "fetch": true
    },
    "persistModuleRegistryBetweenSpecs": true
  }
}
